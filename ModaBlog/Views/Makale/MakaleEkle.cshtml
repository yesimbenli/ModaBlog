@model Entity.Models.Makale
@{
    ViewBag.Title = "MakaleEkle";

}
@section Scripts{

    <script src="~/Content/ckeditor_4.8.0_full (1)/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Icerik');
    </script>
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form_main">
                <h4 class="heading"><strong>Makale </strong> Oluştur <span></span></h4>
                <div class="form">
                    @using (Html.BeginForm("MakaleEkle","Makale",FormMethod.Post,new { enctype="multipart/form-data"}))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }
                        <section class="pb_section pb_section_v1" data-section="about" id="section-about">
                            <div class="container">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(x => x.Baslik, new { @class = "txt", @placeholder = "Başlık" })
                                            @Html.ValidationMessageFor(x => x.Baslik, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @Html.TextAreaFor(x => x.Icerik, new { @class = "txt", @placeholder = "Icerik" })
                                   
                                    <input type="submit" value="Tamamla" name="submit" class="txt2" width="20"/>
                                    <hr />
                                    <hr />
                                    <hr />
                                    @Html.ActionLink("Geri Dön","Index")
                                 
                                </div>
                            </div>
                        </section>

                    }

                </div>
            </div>
        </div>
    </div>
</div>














